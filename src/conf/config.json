{
    "Webserver": {
        "name": "Bäckerei Neumeyer",
        "host": "0.0.0.0",
        "port": 5000,
        "template_folder": "src/templates/",
        "static_folder": "src/static/",
        "secret_key": "asoipdjfhlkasdhf8974365zuiasdhfkjasdgfjhagsdfjhasfdHAJDFAHD"
    },

    "Logging": {
        "formatter": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
    },

    "Database": {
        "connection_url": "mongodb://localhost:27017/",
        "name": "Baekerei-Neumeyer",

        "collections": {
            "TortensortimentData": {
                "name": "TortensortimentData",
                "values": ["torten_name","torten_img_path","torten_description"]
            },
            
            "LoginData": {
                "name": "LoginData",
                "values": ["username","session_id","session_key","session_start_time"],
                "session_id_len": 15,
                "session_key_len": 20,
                "max_login_time_in_sec": 5000
            },
            
            "UserData": {
                "name": "UserData",
                "values": ["username","password"]
            },

            "ContactData": {
                "name": "ContactData",
                "values": ["vorname","nachname","email","telefon","anmerkung","time"]
            }
        }
    },

    "Requests": {
        "regular_data": {
            "base_filepath": "base.html",
            "heading_banner_img_path": "/img/heading_banner/banner-3.jpg",

            "css_files": {
                "standard_css_file": "/css/standard.css",
                "navbar_css_file": "/css/navbar.css"
            },

            "js_files": {
                "standard_js_file": "/js/standard.js"
            },

            "fonts": {
                "font-family: 'Oxygen', sans-serif;": "https://fonts.googleapis.com/css2?family=Oxygen&display=swap",
                "font-family: 'Roboto', sans-serif;": "https://fonts.googleapis.com/css2?family=Roboto&display=swap",
                "font-family: 'Lato', sans-serif;": "https://fonts.googleapis.com/css2?family=Lato&display=swap",
                "font-family: 'Roboto Slab', serif;": "https://fonts.googleapis.com/css2?family=Roboto+Slab&display=swap",
                "font-family: 'Niconne', cursive;":"https://fonts.googleapis.com/css2?family=Niconne&display=swap",
                "font-family: 'Mali', cursive;": "https://fonts.googleapis.com/css2?family=Mali&display=swap"
            },

            "icons": {
                "Cloudflare-Font-Awesome": "https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
            },

            "other": {}
        },

        "index_route": {
            "methods": ["GET"],
            "rule": "/",
            "page_path": "index.html",
            "head_title": "HOME",
            "heading_title": "Bäckerei Neumeyer"
        },

        "service_route": {
            "methods": ["GET"],
            "rule": "/service",
            "page_path": "service.html",
            "head_title": "Service",
            "heading_title": "Service"
        },

        "anfahrt_route": {
            "methods": ["GET"],
            "rule": "/anfahrt",
            "page_path": "anfahrt.html",
            "head_title": "Anfahrt",
            "heading_title": "Anfahrt"
        },

        "logout_route": {
            "methods": ["GET"],
            "rule": "/logout",
            "page_path": "",
            "head_title": "",
            "heading_title": ""
        },
        
        "impressum_route": {
            "methods": ["GET"],
            "rule": "/impressum",
            "page_path": "impressum.html",
            "head_title": "Impressum",
            "heading_title": "Impressum"
        },

        "kontakt_route": {
            "methods": ["POST","GET"],
            "rule": "/kontakt",
            "page_path": "kontakt.html",
            "head_title": "Kontakt",
            "heading_title": "Kontakt",
            "unknown_characters": [" ","ä","ü","ö"],
            "email_validation": ["@"],
            "alert_messages": {
                "not_valid_email": "Die angebene E-Mail Adresse '%s' ist nicht korrekt!",
                "error_while_sending_msg": "Ihre Nachricht konnte leider nicht versendet werden! Es handelt sich hierbei womöglich um ein Server-Problem."
            }
        },

        "dashboard_route": {
            "methods": ["GET"],
            "rule": "/dashboard",
            "page_path": "admin/dashboard.html",
            "head_title": "Dashboard",
            "heading_title": "Dashboard",
            "alert_messages": {
                "need_to_bee_logged_in": "Sie müssen eingeloggt sein, um auf diese Seite zugreifen zu können!"
            }
        },

        "tortensortiment_route": {
            "methods": ["GET"],
            "rule": "/tortensortiment",
            "page_path": "tortensortiment.html",
            "head_title": "Tortensortiment",
            "heading_title": "Tortensortiment"
        },

        "about_route": {
            "methods": ["GET"],
            "rule": "/about",
            "page_path": "about.html",
            "head_title": "Über Uns",
            "heading_title": "Über Uns"
        },

        "login_route": {
            "methods": ["POST","GET"],
            "rule": "/login",
            "page_path": "admin/login.html",
            "head_title": "LOGIN",
            "heading_title": "Login",
            "alert_messages": {
                "invalid_login_data": "Es wurden falsche Benutzerdaten angegeben!"
            }
        },

        "404_route": {
            "rule": "404",
            "page_path": "errors/404.html",
            "head_title": "404",
            "heading_title": "Not Found"
        },

        "400_route": {
            "rule": "400",
            "page_path": "errors/400.html",
            "head_title": "400",
            "heading_title": "Bad request"
        },

        "css_route": {
            "methods": ["GET"],
            "rule": "/css/<path:path>",
            "directory": "src/static/css/"
        },

        "js_route": {
            "methods": ["GET"],
            "rule": "/js/<path:path>",
            "directory": "src/static/js/"
        },

        "img_route": {
            "methods": ["GET"],
            "rule": "/img/<path:path>",
            "directory": "src/static/img/"
        }
    }
}