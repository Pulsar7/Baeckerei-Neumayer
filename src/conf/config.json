{
    "Webserver": {
        "name": "Bäckerei Neumayer",
        "host": "0.0.0.0",
        "port": 5000,
        "template_folder": "src/templates/",
        "static_folder": "src/static/",
        "secret_key": "jkalsdfkhjlasdfhjkasdfhiuojafsdhjgasfdguihjafdsiuzghjwaefrugizafwesghjk§%$&§$)IU&/Z$)=&(",
        "img_upload_folder": "src/static/img/uploaded/"
    },

    "Logging": {
        "formatter": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
    },

    "Database": {
        "connection_url": "mongodb://localhost:27017/",
        "name": "Baekerei-Neumayer",

        "collections": {
            "TortensortimentData": {
                "name": "TortensortimentData",
                "values": ["torten_name","torten_img_path","torten_description","upload_zeitpunkt"],
                "empty_data": {
                    "torten_name": "Keine Torte vorhanden",
                    "torten_img_path": "/img/empty_tortensortiment.png",
                    "torten_description": "Es wurde noch keine Torte hochgeladen.",
                    "upload_zeitpunkt": "Jetzt"
                }
            },
            
            "LoginData": {
                "name": "LoginData",
                "values": ["username","session_id","session_key","session_start_time","login_clock"],
                "session_id_len": 10,
                "session_key_len": 15,
                "max_login_time_in_sec": 8000
            },
            
            "UserData": {
                "name": "UserData",
                "values": ["username","password"]
            },

            "TeamData": {
                "name": "TeamData",
                "values": ["vorname","nachname","arbeitsplatz","informationen","img_path"],
                "empty_data": {
                    "vorname": "Vorname",
                    "nachname": "Nachname", "arbeitsplatz": "Arbeitsplatz", "informationen": "Informationen...",
                    "img_path": "/img/empty_team_member.png"
                }
            },

            "ContactData": {
                "name": "ContactData",
                "msg_id_len": 17,
                "values": ["vorname","nachname","email","telefon","anmerkung","time","id"],
                "empty_data": {
                    "vorname": "Keine Anmerkung", "nachname": "vorhanden",
                    "email": "keine-anmerkung@neumayer.de", "telefon": "0123456789", 
                    "anmerkung": "Ich find die Seite eigentlich relativ schlecht. Müsst ihr wissen. Guten Tag.", 
                    "time": "jetzt", "id": "0"
                }
            }
        }
    },

    "Requests": {
        "regular_data": {
            "red_flash_keyword": "!",
            "base_filepath": "base.html",
            "heading_banner_img_path": "/img/heading_banner/banner-3.jpg",

            "css_files": {
                "standard_css_file": "/css/standard.css",
                "navbar_css_file": "/css/navbar.css"
            },

            "js_files": {
                "standard_js_file": "/js/standard.js"
            },

            "fonts": {
                "font-family: 'Oxygen', sans-serif;": "https://fonts.googleapis.com/css2?family=Oxygen&display=swap",
                "font-family: 'Roboto', sans-serif;": "https://fonts.googleapis.com/css2?family=Roboto&display=swap",
                "font-family: 'Lato', sans-serif;": "https://fonts.googleapis.com/css2?family=Lato&display=swap",
                "font-family: 'Roboto Slab', serif;": "https://fonts.googleapis.com/css2?family=Roboto+Slab&display=swap",
                "font-family: 'Niconne', cursive;":"https://fonts.googleapis.com/css2?family=Niconne&display=swap",
                "font-family: 'Mali', cursive;": "https://fonts.googleapis.com/css2?family=Mali&display=swap"
            },

            "icons": {
                "Cloudflare-Font-Awesome-4": "<link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css' type='text/css'>",
                "Google-Font-Team-ICON": "<link rel='stylesheet' type='text/css' href='https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0'>",
